{
  "steps": [{
     "name": "gcr.io/cloud-builders/docker",
     "args": [
        "build",
        "-t",
        "gcr.io/kiss-16325/new_testing_code:$COMMIT_SHA",
        "."
      ]
  },
  {
     "name": "gcr.io/cloud-builders/docker",
     "args": [
        "push",
        "gcr.io/kiss-16325/new_testing_code:$COMMIT_SHA"
      ]
  },
  {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": [
         "run",
         "deploy",
         "php72",
         "--image",
         "gcr.io/kiss-16325/new_testing_code:$COMMIT_SHA",
         "--region",
         "asia-east1",
         "--platform",
         "managed",
         "--allow-unauthenticated",
         "--port",
         "80"
      ]
  }],
 "images": [
    "gcr.io/kiss-16325/new_testing_code:$COMMIT_SHA"
  ]
}
